<?xml version="1.0"?>
<ruleset name="FinCommerce Beta Tester Coding Standards">
	<description>FinCommerce Beta Tester PHP_CodeSniffer ruleset.</description>

	<file>./fincommerce-beta-tester.php</file>	
	<file>./includes/</file>
	<file>./api/</file>

	<!-- Show progress, show the error codes for each message (source). -->
	<arg value="ps" />

	<!-- Strip the filepaths in reports down to the relevant bit. -->
	<arg name="basepath" value="./" />

	<!-- Check up to 8 files simultaneously. -->
	<arg name="parallel" value="8" />

	<!-- Configs -->
	<config name="minimum_supported_wp_version" value="5.2" />
	<config name="testVersion" value="7.4-" />

	<!-- Rules -->
	<rule ref="FinCommerce-Core" />

	<rule ref="finpress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="fincommerce-beta-tester" />
		</properties>
	</rule>

	<rule ref="FinCommerce.Commenting.CommentHooks.MissingHookComment">
		<exclude-pattern>includes/</exclude-pattern>
		<exclude-pattern>api/</exclude-pattern>
	</rule>
	
	<rule ref="Squiz.Commenting.FileComment.Missing">
		<exclude-pattern>includes/</exclude-pattern>
		<exclude-pattern>api/</exclude-pattern>
	</rule>
</ruleset>
