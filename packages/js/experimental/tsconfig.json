{
	"extends": "../tsconfig",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build-module",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./build-types",
		"typeRoots": [ "./typings", "./node_modules/@types" ],
		"types": [ "jest" ]
	},
	"include": [
		"typings/**/*",
		"src/**/*"
	],
	"exclude": [
		"**/test/**",
		"**/stories/**"
	]
}
